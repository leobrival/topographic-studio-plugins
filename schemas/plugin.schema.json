{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://claude-plugins.local/schemas/plugin.schema.json",
  "title": "Claude Code Plugin",
  "description": "Schema for Claude Code plugin manifest (plugin.json)",
  "type": "object",
  "required": ["name"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique plugin identifier (kebab-case, no spaces)"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9.]+)?$",
      "description": "Semantic version (e.g., 1.0.0, 2.1.0-beta.1)"
    },
    "description": {
      "type": "string",
      "description": "Brief explanation of plugin purpose"
    },
    "author": {
      "$ref": "#/definitions/author",
      "description": "Creator information"
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "Documentation URL"
    },
    "repository": {
      "type": "string",
      "format": "uri",
      "description": "Source code URL"
    },
    "license": {
      "type": "string",
      "description": "License identifier (MIT, Apache-2.0, etc.)"
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Searchable discovery tags"
    },
    "commands": {
      "$ref": "#/definitions/pathOrPaths",
      "description": "Command file paths (relative, starting with ./)"
    },
    "agents": {
      "$ref": "#/definitions/pathOrPaths",
      "description": "Agent file paths"
    },
    "skills": {
      "$ref": "#/definitions/pathOrPaths",
      "description": "Skill directory paths"
    },
    "hooks": {
      "oneOf": [
        { "type": "string", "pattern": "^\\./" },
        { "$ref": "#/definitions/hooksConfig" }
      ],
      "description": "Hook config path or inline configuration"
    },
    "mcpServers": {
      "oneOf": [
        { "type": "string", "pattern": "^\\./" },
        { "$ref": "#/definitions/mcpServersConfig" }
      ],
      "description": "MCP server config path or inline configuration"
    },
    "lspServers": {
      "oneOf": [
        { "type": "string", "pattern": "^\\./" },
        { "$ref": "#/definitions/lspServersConfig" }
      ],
      "description": "LSP server config path or inline configuration"
    },
    "outputStyles": {
      "$ref": "#/definitions/pathOrPaths",
      "description": "Output style file paths"
    }
  },
  "definitions": {
    "author": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Author name"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Author email"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Author website URL"
        }
      },
      "additionalProperties": false
    },
    "pathOrPaths": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^\\./"
        },
        {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^\\./"
          }
        }
      ],
      "description": "Relative path or array of paths (must start with ./)"
    },
    "hooksConfig": {
      "type": "object",
      "properties": {
        "hooks": {
          "type": "object",
          "properties": {
            "PreToolUse": { "$ref": "#/definitions/hookEventArray" },
            "PostToolUse": { "$ref": "#/definitions/hookEventArray" },
            "PostToolUseFailure": { "$ref": "#/definitions/hookEventArray" },
            "PermissionRequest": { "$ref": "#/definitions/hookEventArray" },
            "UserPromptSubmit": { "$ref": "#/definitions/hookEventArray" },
            "Notification": { "$ref": "#/definitions/hookEventArray" },
            "Stop": { "$ref": "#/definitions/hookEventArray" },
            "SubagentStart": { "$ref": "#/definitions/hookEventArray" },
            "SubagentStop": { "$ref": "#/definitions/hookEventArray" },
            "Setup": { "$ref": "#/definitions/hookEventArray" },
            "SessionStart": { "$ref": "#/definitions/hookEventArray" },
            "SessionEnd": { "$ref": "#/definitions/hookEventArray" },
            "PreCompact": { "$ref": "#/definitions/hookEventArray" }
          },
          "additionalProperties": false
        }
      }
    },
    "hookEventArray": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "matcher": {
            "type": "string",
            "description": "Regex pattern to match tool names"
          },
          "hooks": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/hookAction"
            }
          }
        }
      }
    },
    "hookAction": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["command", "prompt", "agent"],
          "description": "Hook action type"
        },
        "command": {
          "type": "string",
          "description": "Shell command to execute (for type: command)"
        },
        "prompt": {
          "type": "string",
          "description": "Prompt to evaluate (for type: prompt)"
        }
      }
    },
    "mcpServersConfig": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["command"],
        "properties": {
          "command": {
            "type": "string",
            "description": "MCP server command"
          },
          "args": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Command arguments"
          },
          "env": {
            "type": "object",
            "additionalProperties": { "type": "string" },
            "description": "Environment variables"
          },
          "cwd": {
            "type": "string",
            "description": "Working directory"
          }
        }
      }
    },
    "lspServersConfig": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["command", "extensionToLanguage"],
        "properties": {
          "command": {
            "type": "string",
            "description": "LSP binary to execute"
          },
          "args": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Command arguments"
          },
          "extensionToLanguage": {
            "type": "object",
            "additionalProperties": { "type": "string" },
            "description": "Maps file extensions to language identifiers"
          },
          "transport": {
            "type": "string",
            "enum": ["stdio", "socket"],
            "default": "stdio"
          },
          "env": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          },
          "initializationOptions": {
            "type": "object"
          },
          "settings": {
            "type": "object"
          },
          "workspaceFolder": {
            "type": "string"
          },
          "startupTimeout": {
            "type": "integer"
          },
          "shutdownTimeout": {
            "type": "integer"
          },
          "restartOnCrash": {
            "type": "boolean"
          },
          "maxRestarts": {
            "type": "integer"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
